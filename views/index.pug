extends layout.pug

block content

    form(action='/addUser', method='POST')
        | ID:
        input(type='text', name='id')
        br
        | Name:
        input(type='text', name='name')
        br
        | Email:
        input(type='text', name='email')
        br
        | Address:
        input(type='text', name='address')
        br
        | Age:
        input(type='text', name='age')
        br

        | Submit:
        input(type='submit', value='Submit')
